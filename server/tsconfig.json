{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"sourceMap": true,
		"outDir": "out",
        "rootDir": "src",
        "declaration": true,
        "lib": [ "es6", "dom" ],
		"types": ["jest"],
        "typeRoots": [
            "./src/types",
			"./node_modules/@types"
          ]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}
